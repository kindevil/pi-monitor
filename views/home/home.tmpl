{{template "header" .}} 
{{template "navbar"}}
    <div class="container-fluid mt-5 mb-5">
        <div class="row">
            <div class="col-sm-3">
                <div class="card gauge-card" style="min-height:400px;background: #fff;">
                    <div class="card-body gauge-card-body">
                        <h5 class="card-title gauge-card-title mb-3">{{.vendor}}</h5>
                        <ul class="list-unstyled host-info">
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">主机名</small> 
                                <span class="host-info-content">{{.hostname}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">系统版本</small> 
                                <span class="host-info-content">{{.os}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">厂家</small> 
                                <span class="host-info-content">{{.vendor}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">硬件版本</small> 
                                <span class="host-info-content">{{.model}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">序列号</small> 
                                <span class="host-info-content">{{.serial}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">开机时间</small> 
                                <span class="host-info-content">{{.boottime}}</span>
                            </li>
                            <li class="text-center p-1" style="background-color: #f6f8fa;">
                                <small class="host-info-title">内核信息</small> 
                                <span class="host-info-content">{{.kernal}}</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="card gauge-card" style="min-width: 360px;">
                            <div class="card-body gauge-card-body" >
                                <h5 class="card-title gauge-card-title" >CPU占用</h5>
                                <div id="cpu" style="min-height:360px;"></div>
                            </div>
                        </div>
                        <div class="row no-gutters text-center text-white">
                            <div class="col-4">
                                <div class="block-style" style="background-color: #f05454;">
                                    <span id="core"></span>
                                    <small style="display: block;">核心数</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="block-style" style="background-color: #30475e;">
                                    <span id="temp"></span>
                                    <small style="display: block;">温度</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="block-style" style="background-color: #fd8c04;">
                                    <span id="freq"></span>
                                    <small style="display: block;">频率</small>
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutters mt-2 p-2 block-style text-center" style="background-color: #f6f8fa;">
                            <div class="col">
                            <span id="idle"></span>
                            <small style="display: block;">IDLE</small>
                            </div>
                            <div class="col">
                            <span id="user"></span>
                            <small style="display: block;">USER</small>
                            </div>
                            <div class="col">
                            <span id="sys"></span>
                            <small style="display: block;">SYS</small>
                            </div>
                            <div class="col">
                            <span id="nice"></span>
                            <small style="display: block;">NICE</small>
                            </div>
                            <div class="col">
                            <span id="iow"></span>
                            <small style="display: block;">IOW</small>
                            </div>
                            <div class="col">
                            <span id="irq"></span>
                            <small style="display: block;">IRQ</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="card gauge-card" style="min-width: 360px;">
                            <div class="card-body gauge-card-body" >
                                <h5 class="card-title gauge-card-title" >内存占用</h5>
                                <div id="mem" style="min-height:360px;"></div>
                            </div>
                        </div>
                        <div class="row no-gutters text-center text-white">
                            <div class="col-4">
                                <div class="block-style" style="background-color: #f05454;">
                                    <span id="mem-total"></span>
                                    <small style="display: block;">TOTAL</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="block-style" style="background-color: #30475e;">
                                    <span id="mem-used"></span>
                                    <small style="display: block;">USED</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="block-style" style="background-color: #fd8c04;">
                                    <span id="mem-free"></span>
                                    <small style="display: block;">FREE</small>
                                </div>
                            </div>
                        </div>
                        <div class="row no-gutters mt-2 p-2 block-style text-center" style="background-color: #f6f8fa;">
                            <div class="col">
                            <span id="mem-shared"></span>
                            <small style="display: block;">SHARED</small>
                            </div>
                            <div class="col">
                            <span id="mem-cache"></span>
                            <small style="display: block;">CACHE</small>
                            </div>
                            <div class="col">
                            <span id="mem-ava"></span>
                            <small style="display: block;">AVAILABLE</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mt-5 p-2 text-center text-white">
                            <div id="disk" style="min-height:360px;"></div>
                            <div class="row no-gutters block-style" style="background-color: #f05454;">
                                <div class="col">
                                <span></span>
                                <small style="display: block;">使用率</small>
                                </div>
                                <div class="col">
                                <span></span>
                                <small style="display: block;">已使用</small>
                                </div>
                                <div class="col">
                                <span></span>
                                <small style="display: block;">剩余</small>
                                </div>
                                <div class="col">
                                <span></span>
                                <small style="display: block;">总共</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mt-5 p-2 text-center text-white">
                            <div id="swap" style="min-height:360px;"></div>
                            <div class="row no-gutters block-style" style="background-color: #30475e;">
                                <div class="col">
                                <span id="swap-usage"></span>
                                <small style="display: block;">使用率</small>
                                </div>
                                <div class="col">
                                <span id="swap-used"></span>
                                <small style="display: block;">已使用</small>
                                </div>
                                <div class="col">
                                <span id="swap-remain"></span>
                                <small style="display: block;">剩余</small>
                                </div>
                                <div class="col">
                                <span id="swap-total"></span>
                                <small style="display: block;">总共</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        {{range .disks}}
                        <div class="disk-device p-3 mt-3">
                            <h5>{{.Name}}</h5>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" style="width: 35.6%">75%</div>
                            </div>
                        </div>
                        {{end}}
                    </div>
                    <div class="col-12">
                        <div class="net-traffic mt-5 p-3">
                            <div id="net-traffic-1" style="min-height:360px;"></div>
                            <div class="row">
                                <div class="col-2">
                                    <span style="color: #f05454;">流入</span> <span id="traffic-cur-in-1"></span>
                                </div>
                                <div class="col-2">
                                    <span style="color: #006699;">流出</span> <span id="traffic-cur-out-1"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <span style="color: #f05454;">总流入</span> <span id="traffic-total-in-1"></span>
                                </div>
                                <div class="col-2">
                                    <span style="color: #006699;">总流出</span> <span id="traffic-total-out-1"></span>
                                </div>
                            </div>
                        </div>
                        <div class="net-traffic mt-5 p-3">
                        <div id="net-traffic-2" class="net-traffic mt-2 p-2" style="min-height:360px;"></div>
                            <div class="row">
                                <div class="col-2">
                                    <span style="color: #f05454;">流入</span> <span id="traffic-cur-in-2"></span>
                                </div>
                                <div class="col-2">
                                    <span style="color: #006699;">流出</span> <span id="traffic-cur-out-2"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <span style="color: #f05454;">总流入</span> <span id="traffic-total-in-2"></span>
                                </div>
                                <div class="col-2">
                                    <span style="color: #006699;">总流出</span> <span id="traffic-total-out-2"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
{{template "script"}}
    <script>
        var net_count = {{.netCount}}
    </script>
    <script src="static/js/echarts.min.js"></script>
    <script src="static/js/axios.min.js"></script>
    <script src="static/js/app.js"></script>
{{template "footer" .}}